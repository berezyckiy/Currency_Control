<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTempSum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical|center_horizontal"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/ic_main_frame_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onClickButton1"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="5"
                android:text="1"
                android:textColor="@color/light_font"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onClickButton2"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="5"
                android:text="2"
                android:textColor="@color/light_font"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onClickButton3"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="5"
                android:text="3"
                android:textColor="@color/light_font"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onClickButton4"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="5"
                android:text="4"
                android:textColor="@color/light_font"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnFive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onClickButton5"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="5"
                android:text="5"
                android:textColor="@color/light_font"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnSix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onClickButton6"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="5"
                android:text="6"
                android:textColor="@color/light_font"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnSeven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onClickButton7"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="5"
                android:text="7"
                android:textColor="@color/light_font"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnEight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onClickButton8"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="5"
                android:text="8"
                android:textColor="@color/light_font"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnNine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onClickButton9"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="5"
                android:text="9"
                android:textColor="@color/light_font"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnPoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onClickButtonPoint"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="5"
                android:text="."
                android:textColor="@color/light_font"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnZero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onClickButtonZero"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="5"
                android:text="0"
                android:textColor="@color/light_font"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnClear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="5"
                android:text="C"
                android:textColor="@color/light_font"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>