<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnArrowLeftFirst"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_keyboard_arrow_left"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="5dp" />

        <maks.dev.diplom.mytextview.MyTextView
            android:id="@+id/tvGraphicCurrencyFirst"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="5"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_height="50dp"
            android:layout_width="120dp" />

        <ImageView
            android:id="@+id/btnArrowRightFirst"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_keyboard_arrow_right"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnArrowLeftSecond"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/ic_keyboard_arrow_left"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewGraphic"
            android:layout_weight="1" />

        <maks.dev.diplom.mytextview.MyTextView
            android:id="@+id/tvGraphicCurrencySecond"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnArrowRightSecond"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/ic_keyboard_arrow_right"
            android:layout_marginTop="5dp" />

    </LinearLayout>
</LinearLayout>